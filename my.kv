<CreateAccountWindow>:
    name: "create"
    namee: namee
    email: email
    password: passw
    loc: loc
    Image:
        source: 'Pogoda.png'
        allow_stretch: True
        keep_ratio: False
    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Tworzenie konta"
                color: 1,1,1,0.9
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4
                bold: True
                italic: True
                outline_color: (0,0,0)
                outline_width:2

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Nazwa użytkownika: "
                color: 0,0,0,0.9
                font_size: (root.width**2 + root.height**2) / 14**4
                bold: True
                italic: True
                outline_color: (1,1,1)
                outline_width:2

            TextInput:
                pos_hint: {"x":0.5, "top":0.77}
                size_hint: 0.4, 0.07
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                color: 0,0,0,0.9
                font_size: (root.width**2 + root.height**2) / 14**4
                bold: True
                italic: True
                outline_color: (1,1,1)
                outline_width:2

            TextInput:
                pos_hint: {"x":0.5, "top":0.77-0.13}
                size_hint: 0.4, 0.07
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Hasło: "
                color: 0,0,0,0.9
                font_size: (root.width**2 + root.height**2) / 14**4
                bold: True
                italic: True
                outline_color: (1,1,1)
                outline_width:2

            TextInput:
                pos_hint: {"x":0.5, "top":0.77-0.13*2}
                size_hint: 0.4, 0.07
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0,0.12
                pos_hint: {"x":0.25 ,"top":0.8-0.13*3}
                text: "Lokalizacja: "
                color: 0,0,0,0.9
                font_size: (root.width**2 + root.height**2) / 14**4
                bold: True
                italic: True
                outline_color: (1,1,1)
                outline_width:2

            TextInput:
                pos_hint: {"x":0.5, "top":0.77-0.13*3}
                size_hint: 0.4, 0.07
                id: loc
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.18}
            size_hint: 0.4, 0.1
            background_color: (0,0,0,0.5)
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Masz już konto? Zaloguj się"
            color: 1,1,1,0.9
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width:2
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.3,"y":0.05}
            size_hint: 0.4, 0.10
            background_color: (0,0,0,0.5)
            text: "Stwórz konto"
            color: 1,1,1,0.9
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width:2
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    email: email
    password: password
    Image:
        source: 'Pogoda.png'
        allow_stretch: True
        keep_ratio: False
    FloatLayout:

        Label:
            text:"Email:"
            color: 1,1,1,0.9
            bold: True
            font_size: 30
            italic: True
            outline_color: (0,0,0)
            outline_width:2
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.4, 0.1


        TextInput:
            id: email
            font_size: 30
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.1

        Label:
            text:"Hasło:"
            color: 1,1,1,0.9
            bold: True
            font_size: 30
            italic: True
            outline_color: (0,0,0)
            outline_width:2
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.4, 0.1

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.1

        Button:
            pos_hint:{"x":0.25,"y":0.3}
            size_hint: 0.5, 0.18
            background_color: (0,0,0,0.5)
            font_size: (root.width**2 + root.height**2) / 12**4
            text: "Loguj"
            color: 0,0,0,0.9
            bold: True
            italic: True
            outline_color: (1,1,1)
            outline_width:2
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.1}
            size_hint: 0.4, 0.1
            background_color: (0,0,0,0.5)
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Nie masz konta? Zarejestruj się"
            color: 0,0,0,0.9
            bold: True
            italic: True
            outline_color: (1,1,1)
            outline_width:2
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<MainWindow>:
    created:created
    Image:
        source: 'Pogoda.png'
        allow_stretch: True
        keep_ratio: False

    FloatLayout:
        GridLayout:
            rows: 1
            pos_hint: {"x": 0.1, "top": 0.8}
            size_hint: 0.1, 0.1
            Image:
                source: "termo.png"

        GridLayout:
            rows: 1
            pos_hint: {"x": 0.55, "top": 0.8}
            size_hint: 0.1, 0.1
            Image:
                source: "odczuwal.png"

        GridLayout:
            rows: 1
            pos_hint: {"x": 0.1, "top": 0.55}
            size_hint: 0.1, 0.1
            Image:
                source: "presure.png"

        GridLayout:
            rows: 1
            pos_hint: {"x": 0.55, "top": 0.55}
            size_hint: 0.1, 0.1
            Image:
                source: "wilgot.png"

        GridLayout:
            rows: 1
            pos_hint: {"x": 0.1, "top": 0.3}
            size_hint: 0.1, 0.1
            Image:
                source: "wiatr.png"

        GridLayout:
            rows: 1
            pos_hint: {"x": 0.55, "top": 0.3}
            size_hint: 0.1, 0.1
            Image:
                source: "opis.png"

        TextInput:
            id: nowalok
            font_size: 35
            font_size: (root.width**2 + root.height**2) / 14**4
            multiline: False
            color: (0,0,0,0.1)
            pos_hint: {"x": 0.35 , "top":0.95}
            size_hint: 0.3, 0.07

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.96}
            size_hint: 0.1, 0.1
            text: "Lokalizacja "
            color: 0,0,0,0.9

        Label:
            id: temp
            pos_hint:{"x": 0.25, "top":0.8}
            size_hint:0.1, 0.1
            text:"Temperatura:\n      {}°C".format(root.temp)
            color: 0,0,0,0.9

        Label:
            id: feels
            pos_hint:{"x": 0.75, "top":0.8}
            size_hint:0.1, 0.1
            text: "Odczuwalna temperatura:\n               {}°C".format(root.feels)
            color: 0,0,0,0.9

        Label:
            id: press
            pos_hint:{"x": 0.25, "top":0.55}
            size_hint:0.1, 0.1
            text: "Ciśnienie:\n {} hPa".format(root.pressure)
            color: 0,0,0,0.9

        Label:
            id: humi
            pos_hint:{"x": 0.75, "top":0.55}
            size_hint:0.1, 0.1
            text: "Wilgotność:\n       {}%".format(root.humidity)
            color: 0,0,0,0.9

        Label:
            id: wind
            pos_hint:{"x": 0.25, "top":0.3}
            size_hint:0.1, 0.1
            text: "Prędkość wiatru:\n    {} km/h".format(root.speed)
            color: 0,0,0,0.9

        Label:
            id: desc
            pos_hint:{"x": 0.75, "top":0.3}
            size_hint:0.1, 0.1
            text: "Opis pogody:\n {}" .format(root.desc)
            color: 0,0,0,0.9

        Button:
            pos_hint:{"x":0.84, "y": 0}
            size_hint: 0.15,0.1
            background_color: (0,0,0,0.7)
            text: "Wyloguj sie"
            color: 0,0,0,0.9
            bold: True
            italic: True
            outline_color: (1,1,1)
            outline_width:2
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"

        Button:
            pos_hint:{"x":0.65, "y": 0.85}
            size_hint:0.13,0.13
            on_release:
                created.text = nowalok.text
                nowalok.text = ''
                root.Weather()
            background_normal: "lupa.png"
            background_down: "lupa2.png"
